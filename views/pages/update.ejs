<div class="jumbotron m-5 text-center bg-dark text-white">
    <div class="container">
        <h2> Edit Todo </h2>
    </div>
</div>
<div class="row d-flex justify-content-center">
    <div class="col-sm-6 col-sm-offset-3">
        <form action="/events/<%= event.slug %>" method="POST">
            <div class="form-group">
                <label for="todoName"> Name</label>
                <input type="text" name="todoName" placeholder="Name" 
                class="form-control" value="<%= event.todoName %>">
            </div>
            <div class="form-group">
                <label for="description">  Description</label>
                <textarea name="todoDescription" class="form-control" rows="5" placeholder=" Description">
                    <%= event.todoDescription %>
                </textarea>
            </div>
            <input type="submit" value="Update" class="btn btn-success btn-md">
        </form>
    </div>
</div>